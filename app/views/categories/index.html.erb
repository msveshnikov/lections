<% cache "me" do %>
    <% @categories.each_with_index do |category, i| %>
        <h1 class="breakoutr" style='background-color:<%=my_color i %>'>
          <%= link_to category.title, category %>
        </h1>
    <% end %>
<% end %>

<% if !getfavs.blank? %>
    <%= image_tag "divider.png" %>
    <h1>Избранные лекции</h1>
    <% getfavs.each do |article| %>
        <%= render Article.find(article) %>
    <% end %>
    <br>
<% end %>
